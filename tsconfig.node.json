{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": false, // Cambia a false para desactivar todas las verificaciones estrictas
    "noUnusedLocals": false, // Permite variables no utilizadas
    "noUnusedParameters": false, // Permite parámetros no utilizados
    "noFallthroughCasesInSwitch": false, // Permite caídas en el switch
    "noUncheckedSideEffectImports": false // Permite importaciones sin verificar efectos secundarios
  },
  "include": ["vite.config.ts"]
}
